@model IEnumerable<CPW219_eCommerceSite.Models.CartPartViewModel>

@{
    ViewData["Title"] = "View Shopping Cart";
}

<h1>View Shopping Cart</h1>

@if(Model.Count() == 0)
{
    <h2>There's nothing in the cart</h2>
}
else
{
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a class="btn btn-danger" asp-action="Remove" asp-route-id="@item.PartId">Remove Item</a>
            </td>
        </tr>
}
    </tbody>
</table>
}